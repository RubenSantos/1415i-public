<% include ./../_layouts/top %>

<div class="container">
    <h1>Criar nova Tarefa</h1>

    <form method="POST" class="form-horizontal" role="form">
      <div class="form-group">
        <label for="txtTitle" class="col-sm-2 control-label">Título</label>
        <div class="col-sm-10">
          <input type="text" name="title" required class="form-control" id="txtTitle" value="<%=todo.title%>" placeholder="Título">
      </div>
  </div>
  <div class="form-group">
    <label for="description" class="col-sm-2 control-label">Descrição</label>
    <div class="col-sm-10">
        <textarea name="description" required class="form-control" id="description" cols="30" rows="10"><%=todo.description%></textarea>
    </div>
</div>
<div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-primary">Criar</button>
  </div>
</div>
</form>


</div>

<% include ./../_layouts/bottom %>